{
  "name": "filter-pre-commit-hooks",

  "workspaceFolder": "/workspaces/filter-pre-commit-hooks",

  "dockerComposeFile": "docker-compose.yaml",

  "service": "vscode",

  "customizations": {
    "vscode": {
      "settings": {
        "mise.checkForNewMiseVersion": false,
        "mise.updateOpenTerminalsEnvAutomatically": true,
        "python.testing.pytestArgs": ["tests"],
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "shellcheck.executablePath": "/home/vscode/.local/share/mise/shims/shellcheck",
        "terminal.integrated.defaultProfile.linux": "zsh"
      },

      "extensions": [
        "BlueGlassBlock.better-json5",
        "EditorConfig.EditorConfig",
        "Gerrnperl.outline-map",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github",
        "Gruntfuggly.todo-tree",
        "Tyriar.sort-lines",
        "VisualStudioExptTeam.vscodeintellicode",
        "charliermarsh.ruff",
        "donjayamanne.githistory",
        "github.vscode-github-actions",
        "hverlin.mise-vscode",
        "mhutchie.git-graph",
        "mkhl.shfmt",
        "ms-python.mypy-type-checker",
        "ms-python.python",
        "nefrob.vscode-just-syntax",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "timonwong.shellcheck",
        "tomoki1207.selectline-statusbar",
        "waderyan.gitblame",
        "yzhang.markdown-all-in-one"
      ]
    }
  },

  "postCreateCommand": {
    "fixVolumeWorkspaceCache": "sudo chown -R vscode:vscode /workspaces/filter-pre-commit-hooks/.cache",
    "fixVolumeUserCache": "sudo chown -R vscode:vscode /home/vscode/.cache"
  },

  "postStartCommand": "/usr/bin/env zsh --interactive --login -c \"rm -rf .cache/* && rm -rf .venv && mise trust && MISE_VERBOSE=1 MISE_JOBS=1 just init\""
}
